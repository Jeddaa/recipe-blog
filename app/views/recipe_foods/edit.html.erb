<%= render partial: 'shared/navigation' %>
<section class="edit-recipe-section">
  <h2>Edit Recipe Food</h2>
  <div class='edit_recipe_food'>
    <%= form_with model: @recipe_food, url: recipe_recipe_food_path(@recipe_food.recipe, @recipe_food), method: :patch do |form| %>
      <%= form.select :food_id, options_for_select(Food.includes(:user).where(user_id: current_user.id).map { |food| [food.name, food.id] }), { prompt: 'Select Food' }, class: 'field add-food-form' %>
      <%= form.text_field :quantity, class: 'add-food-form' %>
      <%= form.submit class: 'submit update_food' %>
  <% end %>
  </div>
</section>