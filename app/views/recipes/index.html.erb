<%= render partial: 'shared/navigation' %><% if @recipes.blank? %>
<div class="p-5">
  <h1> You have not created any recipes yet </h1>
    <button class= "rounded border-2 p-2 mt-4">
    <%= link_to "Create new recipe", new_recipe_path(current_user) %>
  </button>
</div>
<%else%>
  <ul class="flex flex-col p-5">
    <% @recipes.each do |recipe| %>
      <div class = "border rounded border-black flex flex-row p-3   m-3 justify-between w-7/8">
        <div class="flex flex-col gap-2 justify-between">
          <%= link_to "#{recipe.recipe_name}", recipe_path(recipe) %>
          <button class= "rounded border-2 p-2 mt-4">
          <%= link_to "Remove", recipe_path(recipe), method: :delete, data: { confirm: "Are you sure?" } %></button>
        </div>
        <div class="flex justify-start p-0 m-0">
          <h1 class="px-0 mx-1"><%= recipe.description %></h1>
        </div>
      </div>
    <% end %>
  </ul>
<% end %>

