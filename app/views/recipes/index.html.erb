<%= render partial: 'shared/navigation' %><% if @recipes.blank? %>
<div class="p-5">
  <h1> You have not created any recipes yet </h1>
  <button class= "rounded border-2 p-2 mt-4">
    <%= link_to "Create new recipe", new_recipe_path %>
  </button>
</div>
<%else%>
  <button class= "rounded border-2 p-2 mt-4 ml-8">
    <%= link_to "Create new recipe", new_recipe_path %>
  </button>
  <ul class="flex flex-col p-5">
    <% @recipes.each do |recipe| %>
      <div class = "border rounded border-black flex flex-row p-3 m-3 gap-9 w-7/8">
        <div class="flex flex-col justify-between text-black">
          <h3 class="text-black px-0 mx-1">
            <%=link_to "#{recipe.recipe_name}", recipe_path(recipe) %>
          </h3>
          <%= button_to 'REMOVE', recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' }, class: 'underline text-blue-500' %>
        </div>
        <div class="flex justify-start p-0 m-0">
          <h1 class="px-0 mx-1 text-black"><%= recipe.description %></h1>
        </div>
      </div>
    <% end %>
  </ul>
<% end %>

